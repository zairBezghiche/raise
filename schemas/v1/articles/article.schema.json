{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/articles/article.schema.json",
  "title": "Article",
  "description": "Contenu éditorial (page, billet, note).",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Article",
    "en": "Article"
  },
  "x_description": {
    "fr": "Contenu éditorial (page, billet, note).",
    "en": "Editorial content (page, post, note)."
  },
  "type": "object",
  "additionalProperties": false,
  "unevaluatedProperties": false,
  "properties": {
    "$schema": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/instanceSchemaUri"
    },
    "id": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/_id"
    },
    "createdAt": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/createdAt"
    },
    "updatedAt": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/updatedAt"
    },
    "handle": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/slug",
      "description": "Identifiant court lisible unique dans l’espace."
    },
    "displayName": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "label": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "emoji": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/x_emoji"
    },
    "domain": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/DomainName"
    },
    "description": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "summary": {
      "description": "Résumé multilingue court de l'article.",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
      },
      "default": []
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Métadonnées libres."
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/uri"
      }
    },
    "slug": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/slug"
    },
    "title": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "authorId": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/uuid"
    },
    "body": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "excerpt": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "publishedAt": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/dateTime"
    }
  },
  "required": ["id", "handle", "displayName", "createdAt", "slug", "title"],
  "examples": [
    {
      "id": "00000000-0000-0000-0000-000000000000",
      "handle": "sample-slug",
      "displayName": "example",
      "createdAt": "1970-01-01T00:00:00Z",
      "slug": "sample-slug",
      "title": "example"
    }
  ]
}
