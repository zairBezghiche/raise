{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/orders/order.schema.json",
  "title": "Order",
  "description": "Commande d’UO/services.",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Commande",
    "en": "Order"
  },
  "x_description": {
    "fr": "Commande d’UO/services.",
    "en": "Order for work units/services."
  },
  "type": "object",
  "additionalProperties": false,
  "unevaluatedProperties": false,
  "properties": {
    "$schema": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/instanceSchemaUri"
    },
    "id": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/_id"
    },
    "createdAt": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/createdAt"
    },
    "updatedAt": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/updatedAt"
    },
    "handle": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/slug",
      "description": "Identifiant court lisible unique dans l’espace."
    },
    "displayName": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "label": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "emoji": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/x_emoji"
    },
    "domain": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/DomainName"
    },
    "description": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
      },
      "default": []
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Métadonnées libres."
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/uri"
      }
    },
    "orderNumber": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "customerId": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/uuid"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "sku": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
          },
          "workunitId": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/uuid"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "unitPrice": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": ["quantity"]
      },
      "minItems": 1
    },
    "currency": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/currencyCode"
    },
    "totalAmount": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["id", "handle", "displayName", "createdAt", "orderNumber", "items"],
  "examples": [
    {
      "id": "00000000-0000-0000-0000-000000000000",
      "handle": "sample-slug",
      "displayName": "example",
      "createdAt": "1970-01-01T00:00:00Z",
      "orderNumber": "example",
      "items": [
        {
          "quantity": 1
        }
      ]
    }
  ]
}
