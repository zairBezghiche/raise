{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/db/index.schema.json",
  "title": "GenAptitude DB Index",
  "type": "object",

  "allOf": [
    {
      "$ref": "../common/types/base.schema.json",
      "description": "Hérite des champs systèmes standards ($schema, id, createdAt, updatedAt)."
    }
  ],

  "unevaluatedProperties": false,

  "properties": {
    "version": {
      "type": "integer",
      "const": 1,
      "default": 1
    },
    "space": {
      "type": "string",
      "minLength": 1
    },
    "database": {
      "type": "string",
      "minLength": 1
    },
    "collections": {
      "type": "object",
      "description": "Liste des collections gérées.",
      "additionalProperties": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection"
      },
      "properties": {
        "actors": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "actors/actor.schema.json", "items": [] }
        },
        "agents": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "agents/agent-base.schema.json", "items": [] }
        },
        "articles": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "articles/article.schema.json", "items": [] }
        },
        "compilers": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "compilers/compiler.schema.json", "items": [] }
        },
        "configs": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "configs/config.schema.json", "items": [] }
        },
        "contracts": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "contracts/contract.schema.json", "items": [] }
        },
        "dapps": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "dapps/dapp.schema.json", "items": [] }
        },
        "entities": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "entities/entity.schema.json", "items": [] }
        },
        "events": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "events/event.schema.json", "items": [] }
        },
        "mediators": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "mediators/mediator.schema.json", "items": [] }
        },
        "orders": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "orders/order.schema.json", "items": [] }
        },
        "roles": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "roles/role.schema.json", "items": [] }
        },
        "transactions": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "transactions/transaction.schema.json", "items": [] }
        },
        "views": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "views/view.schema.json", "items": [] }
        },
        "workunits": {
          "$ref": "../common/types/primitive-types.schema.json#/$defs/db_collection",
          "default": { "schema": "workunits/workunit.schema.json", "items": [] }
        }
      },
      "required": []
    }
  },
  "required": ["version", "space", "database", "collections"]
}
