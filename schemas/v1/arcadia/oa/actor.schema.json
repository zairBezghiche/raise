{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/arcadia/oa/actor.schema.json",
  "title": "Operational Actor",
  "description": "Une entité externe (humaine ou non) qui interagit avec le système.",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    },
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    }
  ],
  "properties": {
    "isHuman": {
      "type": "boolean",
      "default": true,
      "description": "Indique si l'acteur est un être humain ou un système externe."
    },
    "organization": {
      "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref",
      "description": "Référence vers l'Entité Opérationnelle parente."
    },
    "allocatedActivities": {
      "type": "array",
      "items": {
        "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref"
      },
      "description": "Activités opérationnelles effectuées par cet acteur."
    }
  }
}
