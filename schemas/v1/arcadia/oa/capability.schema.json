{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/arcadia/oa/capability.schema.json",
  "title": "Operational Capability",
  "description": "Aptitude d'une organisation ou d'acteurs à fournir un service.",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    }
  ],
  "properties": {
    "name": {
      "$ref": "../../common/types/primitive-types.schema.json#/$defs/nonEmptyString",
      "description": "Nom de la capacité opérationnelle"
    },
    "description": {
      "type": "string"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref"
      },
      "description": "Acteurs opérationnels concernés"
    },
    "involvedActivities": {
      "type": "array",
      "items": {
        "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref"
      },
      "description": "Activités opérationnelles réalisant cette capacité"
    }
  },
  "required": ["name"]
}
