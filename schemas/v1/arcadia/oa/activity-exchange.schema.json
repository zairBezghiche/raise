{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/arcadia/oa/activity-exchange.schema.json",
  "title": "Operational Exchange",
  "description": "Un flux d'information, de matière ou d'énergie entre Activités ou Acteurs.",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    },
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    }
  ],
  "properties": {
    "source": {
      "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref",
      "description": "L'élément émetteur (Activité, Acteur ou Entité)."
    },
    "target": {
      "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref",
      "description": "L'élément récepteur (Activité, Acteur ou Entité)."
    },
    "exchangeItems": {
      "type": "array",
      "items": {
        "$ref": "../../common/types/primitive-types.schema.json#/$defs/i18nString"
      },
      "description": "Nature des éléments échangés (ex: 'Rapport', 'Signal')."
    },
    "flowType": {
      "type": "string",
      "enum": ["Information", "Energy", "Matter", "Control", "Mixed"],
      "default": "Information",
      "description": "Type de flux."
    }
  },
  "required": ["source", "target"]
}
