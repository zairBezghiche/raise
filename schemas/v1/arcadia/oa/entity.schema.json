{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/arcadia/oa/entity.schema.json",
  "title": "OA Entity",
  "x_schemaVersion": "1.0.0",
  "x_label": {
    "fr": "Entité OA",
    "en": "OA Entity"
  },
  "x_description": {
    "fr": "Entité opérationnelle (physique, informationnelle, organisationnelle…)."
  },
  "type": "object",
  "allOf": [
    {
      "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "Physical",
            "Informational",
            "Organizational",
            "Other"
          ],
          "default": "Other"
        },
        "interactsWith": {
          "type": "array",
          "items": {
            "$ref": "../metamodel/metamodel.schema.json#/$defs/Ref"
          },
          "description": "Autres entités/acteurs OA en interaction."
        },
        "capella": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "xmi_id": {
              "type": "string"
            }
          }
        }
      }
    }
  ]
}