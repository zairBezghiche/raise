{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/arcadia/transverse/test-procedure.schema.json",
  "title": "Test Procedure",
  "description": "Procédure de test (cas de test) définissant les étapes et les critères de réussite.",
  "type": "object",
  "allOf": [
    { "$ref": "../../common/base.schema.json" },
    { "$ref": "../metamodel/metamodel.schema.json#/$defs/BaseProperties" }
  ],
  "properties": {
    "verifies": {
      "type": "array",
      "items": { "$ref": "../../metamodel/metamodel.schema.json#/$defs/Ref" },
      "description": "Traçabilité : Exigences, Fonctions ou Scénarios vérifiés par ce test."
    },
    "testType": {
      "type": "string",
      "enum": ["Unit", "Integration", "Validation", "Performance", "Security"],
      "default": "Validation"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "order": { "type": "integer" },
          "action": { "$ref": "../../common/types/primitive-types.schema.json#/$defs/i18nString" },
          "expectedResult": {
            "$ref": "../../common/types/primitive-types.schema.json#/$defs/i18nString"
          }
        },
        "required": ["action", "expectedResult"]
      }
    },
    "setupDuration": { "type": "string", "description": "Durée estimée (ISO 8601 duration)." }
  },
  "required": ["name", "verifies"]
}
