{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/agents/workflow.schema.json",
  "title": "Workflow Métier (Orchestration)",
  "description": "Graph/DAG des étapes métier: gates HITL/policy, appels MCP, mémoire, etc.",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    }
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "$schema": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/instanceSchemaUri"
          },
          "id": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/_id"
          },
          "createdAt": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/createdAt"
          },
          "updatedAt": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/updatedAt"
          },
          "type": {
            "type": "string",
            "enum": [
              "task",
              "decision",
              "parallel",
              "gate_hitl",
              "gate_policy",
              "call_mcp",
              "store_memory",
              "emit_event"
            ]
          },
          "name": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
          },
          "params": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["id", "type"]
      },
      "default": []
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "from": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/slug"
          },
          "to": {
            "$ref": "../common/types/primitive-types.schema.json#/$defs/slug"
          },
          "channel": {
            "type": "string",
            "enum": ["U2C", "C2A", "A2A"]
          },
          "condition": {
            "type": "string"
          }
        },
        "required": ["from", "to"]
      },
      "default": []
    },
    "entry": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/slug"
    }
  },
  "examples": [
    {
      "nodes": [],
      "edges": [],
      "entry": "sample-slug"
    }
  ]
}
