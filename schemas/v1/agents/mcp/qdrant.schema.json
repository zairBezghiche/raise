{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/agents/mcp/qdrant.schema.json",
  "title": "MCP Qdrant",
  "description": "Sp√©cifique Qdrant (collections, embeddings).",
  "type": "object",
  "allOf": [
    {
      "$ref": "./core.schema.json"
    }
  ],
  "additionalProperties": false,
  "properties": {
    "collection": {
      "$ref": "../../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "vectorSize": {
      "type": "integer",
      "minimum": 1
    },
    "distance": {
      "type": "string",
      "enum": ["Cosine", "Euclid", "Dot"]
    },
    "embedding": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "model": {
          "$ref": "../../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
        },
        "dim": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "examples": [
    {
      "collection": "example",
      "vectorSize": 1,
      "distance": "Cosine",
      "embedding": {}
    }
  ]
}
