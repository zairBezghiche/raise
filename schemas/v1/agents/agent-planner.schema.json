{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/agents/agent-planner.schema.json",
  "title": "Planner IA",
  "description": "Paramétrage du planificateur (stratégie, contraintes, actions autorisées).",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    }
  ],
  "properties": {
    "strategy": {
      "type": "string",
      "enum": ["react", "reflexion", "tree-of-thought", "graph", "workflow"]
    },
    "maxDepth": {
      "type": "integer",
      "minimum": 0,
      "default": 8
    },
    "maxParallel": {
      "type": "integer",
      "minimum": 1,
      "default": 4
    },
    "allowedActions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": [
        "call_mcp",
        "search",
        "retrieve",
        "tool",
        "emit_event",
        "store_memory",
        "gate_hitl",
        "gate_policy"
      ]
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "maxTokens": {
          "type": "integer",
          "minimum": 0
        },
        "maxLatencyMs": {
          "type": "integer",
          "minimum": 0
        },
        "costBudget": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "examples": [
    {
      "strategy": "react",
      "maxDepth": 8,
      "maxParallel": 4,
      "allowedActions": [
        "id",
        "createdAt",
        "call_mcp",
        "search",
        "retrieve",
        "tool",
        "emit_event",
        "store_memory",
        "gate_hitl",
        "gate_policy"
      ],
      "constraints": {}
    }
  ]
}
