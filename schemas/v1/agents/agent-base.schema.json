{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/agents/agent-base.schema.json",
  "title": "Agent Base",
  "description": "Socle commun d’un agent IA (identité, version, persona, objectifs).",
  "type": "object",
  "additionalProperties": false,
  "unevaluatedProperties": false,
  "patternProperties": {
    "^x_": {}
  },
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    }
  ],
  "properties": {
    "handle": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/slug"
    },
    "displayName": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
    },
    "label": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "x_emoji": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/x_emoji"
    },
    "domain": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/DomainName"
    },
    "description": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
      },
      "uniqueItems": true,
      "default": []
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/uri"
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "version": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/semver"
    },
    "name": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
    },
    "instructions": {
      "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString",
      "title": "Instructions (persona / système)"
    },
    "goals": {
      "title": "Objectifs",
      "type": "array",
      "items": {
        "$ref": "../common/types/primitive-types.schema.json#/$defs/i18nNonEmptyString"
      },
      "uniqueItems": true,
      "default": []
    },
    "engineeringDomain": {
      "type": "string",
      "enum": ["system", "software", "hardware", "transverse"],
      "description": "Le domaine d'ingénierie principal de cet agent."
    },
    "supportedLayers": {
      "type": "array",
      "items": { "enum": ["OA", "SA", "LA", "PA", "EPBS"] },
      "description": "Les couches Arcadia sur lesquelles cet agent a autorité."
    }
  },
  "required": ["handle", "displayName", "createdAt", "version", "name", "description"],
  "examples": [
    {
      "handle": "sample-slug",
      "displayName": "example",
      "version": "1.0.0",
      "name": {
        "fr": "Exemple",
        "en": "Example"
      },
      "description": {
        "fr": "Exemple",
        "en": "Example"
      }
    }
  ]
}
