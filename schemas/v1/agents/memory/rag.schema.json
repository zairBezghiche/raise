{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://genaptitude.local/schemas/v1/agents/memory/rag.schema.json",
  "title": "Mémoire / RAG",
  "description": "Configuration de la mémoire (historique, index, retrieval).",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    {
      "$ref": "../../common/base.schema.json"
    }
  ],
  "properties": {
    "history": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "retentionDays": {
          "type": "integer",
          "minimum": 0,
          "default": 30
        }
      }
    },
    "index": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "store": {
          "type": "string",
          "enum": ["qdrant", "faiss", "chroma", "other"]
        },
        "collection": {
          "$ref": "../../common/types/primitive-types.schema.json#/$defs/nonEmptyString"
        }
      }
    },
    "retrieval": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "topK": {
          "type": "integer",
          "minimum": 1,
          "default": 5
        },
        "scoreThreshold": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "examples": [
    {
      "history": {},
      "index": {},
      "retrieval": {}
    }
  ]
}
